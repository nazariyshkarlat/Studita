<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/defRadius" />
            <stroke
                android:width="1dp"
                android:color="?attr/gray_focused_color" />
            <solid android:color="?page_background_color"/>
        </shape>
    </item>
    <item android:gravity="top" android:top="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="999dp" />
            <solid android:color="?attr/disabled_background_color"/>
            <size android:height="2dp"/>
        </shape>
    </item>
    <item android:drawable="?selectableItemBackground"/>
</layer-list>