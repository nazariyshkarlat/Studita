<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/defaultRLMargin"
    android:paddingEnd="@dimen/defaultRLMargin">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/main_blocks_rectangle"
        android:padding="@dimen/defaultRLMargin">

            <TextView
                android:id="@+id/userStatPageLayoutXPTitle"
                style="@style/Regular16_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_stat_title1"/>

            <TextView
                android:id="@+id/userStatPageLayoutXPSubtitle"
                style="@style/Medium18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="410"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/userStatPageLayoutTimeTitle"
                style="@style/Regular16_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_stat_title2"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/userStatPageLayoutTimeSubtitle"
                style="@style/Medium18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 мин"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/userStatPageLayoutExercisesTitle"
                style="@style/Regular16_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_stat_title3"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/userStatPageLayoutExercisesSubtitle"
                style="@style/Medium18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/userStatPageLayoutTrainingsTitle"
                style="@style/Regular16_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_stat_title4"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/userStatPageLayoutTrainingsSubtitle"
                style="@style/Medium18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/userStatPageLayoutAchievementsTitle"
                style="@style/Regular16_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_stat_title5"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/userStatPageLayoutAchievementsSubtitle"
                style="@style/Medium18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginTop="12dp"/>

    </LinearLayout>
</FrameLayout>