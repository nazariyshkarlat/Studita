<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/homeLayoutToolbarHeight"
    app:layout_scrollFlags="scroll|snap|enterAlways">

    <TextView
        android:id="@+id/homeLayoutBarTitle"
        style="@style/Bold28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultRLMargin"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/learning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.studita.presentation.views.press_view.PressTextView
        android:id="@+id/homeLayoutBarLogInButton"
        style="@style/TextButton16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="@string/log_in"
        android:textAllCaps="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/homeLayoutBarTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.example.studita.presentation.views.press_view.PressImageView
        android:id="@+id/homeLayoutBarAccountImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/avatar_oval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:gravity="center"
        android:textAlignment="center" />

</androidx.constraintlayout.widget.ConstraintLayout>