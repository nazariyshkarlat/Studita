<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/homeLayoutToolbarHeight"
    app:layout_scrollFlags="scroll|snap|enterAlways">

    <TextView
        android:id="@+id/homeLayoutBarTitle"
        style="@style/Bold28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultRLMargin"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/learning"
        android:layout_gravity="center_vertical"/>

    <com.studita.presentation.views.press_view.PressTextView
        android:id="@+id/homeLayoutBarLogInButton"
        style="@style/BlueTextButton16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="@string/sign_in"
        android:textAllCaps="true"
        android:layout_gravity="center_vertical|end"/>

    <com.studita.presentation.views.press_view.PressFrameLayout
        android:id="@+id/homeLayoutBarAccountImageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_gravity="center_vertical|end">


        <ImageView
            android:id="@+id/homeLayoutBarAccountImageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:background="@drawable/avatar_oval" />

        <View
            android:id="@+id/homeLayoutBarAccountNotificationsIndicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="top|end"
            android:background="@drawable/new_notifications_indicator"
            android:visibility="gone" />

    </com.studita.presentation.views.press_view.PressFrameLayout>

</FrameLayout>