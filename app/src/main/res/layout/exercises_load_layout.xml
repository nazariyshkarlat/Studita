<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?page_background_color"
    android:padding="32dp">

    <ImageView
        android:id="@+id/exercisesLoadLayoutLoadImage"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/load_anim" />

    <LinearLayout
        android:id="@+id/exercisesLoadLayoutBottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/exercisesLoadLayoutTipTextView"
            style="@style/Regular16_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <com.example.studita.presentation.views.press_view.PressTextView
            android:id="@+id/exercisesLoadLayoutButton"
            style="@style/BlueTextButton16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:visibility="gone"/>

    </LinearLayout>

</FrameLayout>