<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blocks_rectangle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exerciseTitleNumberNumberNameTrueFalseSymbolTitle"
            style="@style/Medium28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_disabled_color_rectangle"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/exerciseTitleNumberNumberNameTrueFalseSymbolNameTitle"
            style="@style/Regular24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exerciseTitleNumberNumberNameTrueFalseLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:orientation="vertical">

        <include
            android:id="@+id/exerciseTitleNumberNumberNameTrueFalseTrue"
            layout="@layout/exercise_variant_text_item" />

        <include
            android:id="@+id/exerciseTitleNumberNumberNameTrueFalseFalse"
            layout="@layout/exercise_variant_text_item" />

    </LinearLayout>

</LinearLayout>