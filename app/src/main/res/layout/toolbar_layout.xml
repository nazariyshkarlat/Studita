<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbarHeight"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dividerHeight"
        android:alpha="@dimen/bars_alpha"
        android:background="?page_background_color" />

    <ImageView
        android:id="@+id/toolbarLayoutBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background_16dp"
        android:padding="@dimen/defaultRLMargin"
        android:layout_gravity="center_vertical|start"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/toolbarLayoutTitle"
        style="@style/Medium24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_gravity="center"/>


    <ImageView
        android:id="@+id/toolbarLayoutRightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background_16dp"
        android:padding="@dimen/defaultRLMargin"
        android:layout_gravity="center_vertical|end"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/toolbarLayoutRightButtonProgress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/defaultRLMargin"
        android:layout_gravity="center_vertical|end"
        android:visibility="gone" />

</FrameLayout>

