<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbarHeight">

    <com.github.mmin18.widget.RealtimeBlurView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dividerHeight"
        app:realtimeBlurRadius="20dp"
        app:realtimeOverlayColor="?attr/blur_color"/>

    <ImageView
        android:id="@+id/toolbarLayoutBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/defaultRLMargin"
        android:background="@drawable/circle_background_16dp"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/toolbarLayoutTitle"
        style="@style/Medium24"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>

