<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/chapterCompletedDialogAlertKonfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/chapterCompletedDialogAlertCloseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background_16dp"
        android:padding="16dp"
        android:src="@drawable/ic_close"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp">
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/face_with_party_horn_and_party_hat"/>

        <TextView
            android:id="@+id/chapterCompletedDialogAlertTitle"
            style="@style/Medium18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:text="@string/chapter_completed_dialog_alert_title"/>

        <TextView
            android:id="@+id/chapterCompletedDialogAlertSubtitle"
            style="@style/Regular16Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/main_blocks_rectangle"
            android:layout_marginTop="24dp">
            
            <TextView
                android:id="@+id/chapterCompletedDialogAlertHundredsCell"
                style="@style/Regular16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>
            
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?gray_focused_color"/>

            <TextView
                android:id="@+id/chapterCompletedDialogAlertTensCell"
                style="@style/Regular16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?gray_focused_color"/>

            <TextView
                android:id="@+id/chapterCompletedDialogAlertOnesCell"
                style="@style/Regular16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>
            
        </LinearLayout>

        <TextView
            style="@style/Regular14Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/chapter_completed_dialog_alert_counter_bottom_text" />

    </LinearLayout>

</FrameLayout>