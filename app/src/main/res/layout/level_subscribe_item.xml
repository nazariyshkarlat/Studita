<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/defaultRLMargin"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="@dimen/defaultRLMargin"
    android:layout_marginBottom="8dp"
    android:background="@drawable/main_blocks_rectangle"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/defaultRLMargin"
    android:paddingTop="@dimen/defaultRLMargin"
    android:paddingRight="@dimen/defaultRLMargin"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/levelSubscribeItemTitle"
        style="@style/Regular16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <com.example.studita.presentation.views.press_view.PressTextView
        android:id="@+id/levelSubscribeItemButton"
        style="@style/BlueTextButton16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:with_min_click_interval="true" />

</LinearLayout>
