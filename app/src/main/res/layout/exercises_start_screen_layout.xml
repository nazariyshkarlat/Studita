<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/defaultRLMargin"
    android:layout_marginEnd="@dimen/defaultRLMargin"
    android:layout_marginBottom="@dimen/toolbarHeight"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/exercisesStartScreenLayoutImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/main_blocks_oval"
        android:scaleType="center" />

    <TextView
        android:id="@+id/exercisesStartScreenLayoutTitle"
        style="@style/Medium24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/exercisesStartScreenLayoutSubtitle"
        style="@style/Regular18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center" />

</LinearLayout>