<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/defaultRLMargin"
    android:layout_marginEnd="@dimen/defaultRLMargin">

    <TextView
        android:id="@+id/exerciseArrangeNumbersLayoutTitle"
        style="@style/Regular16Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <com.studita.presentation.views.ArrangeNumbersView
        android:id="@+id/exerciseArrangeNumbersLayoutNumbersView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>