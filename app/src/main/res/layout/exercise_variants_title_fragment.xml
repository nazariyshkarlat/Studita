<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingTop="@dimen/toolbarHeight">

    <TextView
        android:id="@+id/exerciseVariantsTitleFragmentTitle"
        style="@style/Bold32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/exerciseVariantsTitleFragmentSubtitle"
        style="@style/Regular16_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <ScrollView
        android:id="@+id/exerciseVariantsTitleFragmentScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:id="@+id/exerciseVariantsTitleFragmentLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:orientation="vertical" />

    </ScrollView>

</LinearLayout>