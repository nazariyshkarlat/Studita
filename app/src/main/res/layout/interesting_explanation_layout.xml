<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exercisesDescriptionPureLayoutLayoutScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="@dimen/toolbarHeight"
    android:paddingBottom="@dimen/buttonWithPaddingHeight">

    <LinearLayout
        android:id="@+id/interestingExplanationLayoutParentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultRLMargin"
        android:layout_marginEnd="@dimen/defaultRLMargin"
        android:orientation="vertical">

        <TextView
            style="@style/Medium24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/interesting_explanation_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/main_blocks_rectangle"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                style="@style/Regular16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interesting_explanation_rating" />

            <LinearLayout
                android:id="@+id/interestingExplanationLayoutThumbsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/interestingExplanationLayoutThumbUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_background_12dp"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_thumb_up" />

                <ImageView
                    android:id="@+id/interestingExplanationLayoutThumbDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_background_12dp"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_thumb_down" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>