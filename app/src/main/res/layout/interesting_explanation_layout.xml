<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exercisesDescriptionPureLayoutLayoutScrollView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/toolbarHeight"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/interestingExplanationLayoutParentLinearLayout"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/defaultRLMargin"
        android:layout_marginEnd="32dp">

        <TextView
            style="@style/Medium24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interesting_explanation_title"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/main_blocks_rectangle"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <TextView
                style="@style/Regular16"
                android:text="@string/interesting_explanation_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/interestingExplanationLayoutThumbUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_background_12dp"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_thumb_up"/>
                <ImageView
                    android:id="@+id/interestingExplanationLayoutThumbDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_background_12dp"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_thumb_down"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>