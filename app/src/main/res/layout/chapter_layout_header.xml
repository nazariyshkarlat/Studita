<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/defaultRLMargin"
    android:paddingTop="24dp"
    android:paddingEnd="@dimen/defaultRLMargin">

    <TextView
        android:id="@+id/chapterHeaderTitle"
        style="@style/Medium24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:singleLine="true" />

    <com.example.studita.presentation.views.CustomProgressBar
        android:id="@+id/chapterHeaderProgressBar"
        style="@style/CustomProgressBar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/chapterHeaderProgressText"
        style="@style/Regular14Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="4dp" />

</LinearLayout>