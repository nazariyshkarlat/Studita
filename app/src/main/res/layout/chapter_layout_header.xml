<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="32dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chapterHeaderTitle"
            style="@style/Medium24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:singleLine="true"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/chapterHeaderCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background_12dp"
            android:padding="12dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical|end"
            app:srcCompat="@drawable/ic_close"/>

    </FrameLayout>

    <com.studita.presentation.views.ProgressBar
        android:id="@+id/chapterHeaderProgressBar"
        style="@style/ProgressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="@dimen/defaultRLMargin"
        android:layout_marginEnd="@dimen/defaultRLMargin"/>

    <TextView
        android:id="@+id/chapterHeaderProgressText"
        style="@style/Regular14Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="@dimen/defaultRLMargin"
        android:layout_marginEnd="@dimen/defaultRLMargin"/>

</LinearLayout>