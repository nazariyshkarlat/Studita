<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectCourseLayoutMotionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    app:layoutDescription="@xml/select_course_layout_scene">

    <FrameLayout
        android:id="@+id/selectCourseBackgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?page_background_color"/>


    <com.studita.presentation.views.press_view.PressTextView
        android:id="@+id/selectCourseLayoutTitle"
        style="@style/Bold28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="@string/courses"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/expand_animation"
        android:background="?page_background_color"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/selectCourseLayoutTopDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?gray_focused_color"/>

     <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/selectCourseLayoutRadioButton"
        style="@style/RadioButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:clickable="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:fontFamily="@font/roboto_regular"
        android:paddingStart="4dp"
        android:text="@string/math"
        android:textColor="?primary_color"
        android:textSize="16sp"
        android:paddingEnd="@dimen/defaultRLMargin"/>

    <LinearLayout
        android:id="@+id/selectCourseLayoutFirstItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/defaultRLMargin"
        android:paddingEnd="@dimen/defaultRLMargin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_lock_secondary" />

        <TextView
            style="@style/Regular16Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/history" />

        <TextView
            style="@style/SmallBlueTransparentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/soon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectCourseLayoutSecondItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/defaultRLMargin"
        android:paddingEnd="@dimen/defaultRLMargin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_lock_secondary" />

        <TextView
            style="@style/Regular16Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/art" />

        <TextView
            style="@style/SmallBlueTransparentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/soon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectCourseLayoutThirdItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/defaultRLMargin"
        android:paddingEnd="@dimen/defaultRLMargin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_lock_secondary" />

        <TextView
            style="@style/Regular16Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/physics" />

        <TextView
            style="@style/SmallBlueTransparentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/soon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectCourseLayoutForthItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/defaultRLMargin"
        android:paddingEnd="@dimen/defaultRLMargin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_lock_secondary" />

        <TextView
            style="@style/Regular16Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/chemistry" />

        <TextView
            style="@style/SmallBlueTransparentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/soon" />

    </LinearLayout>

    <View
        android:id="@+id/selectCourseLayoutBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?gray_focused_color"
        android:layout_marginStart="@dimen/defaultRLMargin"
        android:layout_marginEnd="@dimen/defaultRLMargin"/>

    <LinearLayout
        android:id="@+id/selectCourseLayoutSubscribeBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:layout_marginStart="@dimen/defaultRLMargin"
        android:layout_marginEnd="@dimen/defaultRLMargin"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/selectCourseLayoutBottomDivider"
        android:background="@drawable/blocks_rectangle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectCourseLayoutSubscribeText"
            style="@style/Regular16"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.studita.presentation.views.press_view.PressTextView
            android:id="@+id/selectCourseLayoutSubscribeButton"
            style="@style/BlueTextButton16"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            app:with_min_click_interval="true"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.studita.presentation.views.press_view.PressTextView
        android:id="@+id/selectCourseLayoutButton"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/buttonRLMargin"
        android:layout_marginEnd="@dimen/buttonRLMargin"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/select_course_button_text"/>

</androidx.constraintlayout.motion.widget.MotionLayout>