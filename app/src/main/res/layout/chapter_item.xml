<?xml version="1.0" encoding="utf-8"?>
<com.example.studita.presentation.views.AlphaGradientView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.card.MaterialCardView
        style="@style/TaskCardView"
        android:id="@+id/chapterItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="@dimen/defaultRLMargin"
        android:layout_marginEnd="@dimen/defaultRLMargin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/defaultRLMargin"
                android:orientation="vertical"
                android:requiresFadingEdge="vertical">

                <TextView
                    android:id="@+id/chapterItemTitle"
                    style="@style/Medium18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/chapterItemSubtitle"
                    style="@style/Regular14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/chapterItemProgressText"
                    style="@style/Regular13Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />

                <com.example.studita.presentation.views.CustomProgressBar
                    android:id="@+id/chapterItemProgressBar"
                    style="@style/CustomProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="14dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</com.example.studita.presentation.views.AlphaGradientView>