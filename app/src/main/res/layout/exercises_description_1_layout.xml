<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exercisesDescription1LayoutScrollView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/toolbarHeight"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/buttonWithPaddingHeight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exercisesDescription1ParentLinearLayout"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/defaultRLMargin"
        android:layout_marginEnd="32dp">

        <TextView
            style="@style/Medium24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercises_description_title"
            android:layout_marginTop="8dp"/>

        <TextView
            style="@style/Regular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            style="@style/Regular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/exercisesDescription1LayoutLinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/main_blocks_rectangle"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="-16dp"/>

        <TextView
            style="@style/Regular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:id="@+id/exercisesDescription1LayoutLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/main_blocks_rectangle"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="-16dp"/>

        <TextView
            style="@style/Regular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>

        <TextView
            style="@style/Medium18Yellow"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:background="@drawable/main_blocks_rectangle"
            android:gravity="center"
            android:layout_marginTop="24dp"/>

        <TextView
            style="@style/Regular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>

        <TextView
            style="@style/Regular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            style="@style/Regular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            style="@style/Regular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</ScrollView>